{
  "kind": "collectionType",
  "collectionName": "artefatoes",
  "info": {
    "singularName": "artefato",
    "pluralName": "artefatoes",
    "displayName": "Artefato"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "nome": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true,
      "unique": true
    },
    "descricao": {
      "type": "richtext",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "required": true
    },
    "arquivo": {
      "type": "media",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "tipo": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::tipo.tipo"
    }
  }
}
